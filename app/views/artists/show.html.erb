<div class="menu">
  <div class="container">
    <%= link_to image_tag("back.png"), class: "back" %>
    <%= image_tag 'logo_text.png', class: 'logo' %>
  </div>
</div>
<div class="container">
  <h1><%= @artist.artist %></h1>
  <img src="<%= @artist.photo_url  %>" >
  <div class="rating">
    <p> Number of Stars: <%=  @artist.rating %></p>
  </div>
  <div class="description">
    <p><%= @artist.description %>
    </p>
  </div>
  <div class="prof_buttons">
    <%= link_to 'Tip/Review', "/artists/#{@artist.id}/tip", class: "button tip" %>
    <%= link_to 'Add Location', new_user_path, class: "button add_location" %>
  </div>
  <div class="reviews">
    <h3>Reviews</h3>
    <div class="review">
      <ul>
        <li><h4>Reviewed by: Ethan Gould</h4></li>
        <li>Thought he was cool, I really like the name</li></br>
        <li><b>Location Seen:</b> Government Center Plaza</li>
      </ul>
    <div style="clear:both"></div>
  </div>
</div>
